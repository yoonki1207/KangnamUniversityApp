<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:textColor="?attr/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_search_title"
        android:textSize="30sp"
        android:textAlignment="center"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <EditText
                android:id="@+id/search_value"
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:hint="@string/string_search_hint"
                android:textColorHint="?attr/textHintColor"
                android:textColor="?attr/textColor"/>
            <Button
                android:id="@+id/search_button"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="@string/string_search_btn"
                android:background="?attr/btnColor"
                android:textColor="?attr/textColor"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_search_description"
            android:textSize="17sp"
            android:padding="10dp"
            android:textColor="?attr/textColor"/>
    </LinearLayout>

</LinearLayout>